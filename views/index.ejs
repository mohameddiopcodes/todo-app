<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title><%= title %></title>
</head>
<body>
    <h1>To-dos</h1>
    <% todos.forEach(t => { %>
        <div class='todo'>
            <form action="/<%= t.id %>?_method=DELETE" method='POST'>
                <input type="submit" value="x">
            </form>
            <p><%= t.task %></p>
            <p class='completed'><%= t.completed ? 'completed': 'not completed' %></p>
        </div>
    <% }) %>
    <form class='add-todo' action="/" method='POST' autocomplete="off">
        <input name='task' type="text" placeholder='Add Todo'>
        <input type="submit" value="ADD TODO">
    </form>
</body>
</html>